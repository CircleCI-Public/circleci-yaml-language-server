{
    "name": "circleci-language-server",
    "displayName": "Circle CI Language Server",
    "description": "",
    "version": "0.0.3",
    "publisher": "circleci",
    "repository": {
        "type": "git",
        "url": "https://github.com/circleci-public"
    },
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:yaml"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "circleci-language-server.restartServer",
                "title": "Circle CI Language Server: Restart Language Server"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "build": "webpack",
        "watch": "webpack --watch",
        "build-go": "task -t ../../Taskfile.yml build && mkdir bin && cp ../../bin/start_server ./bin/start_server",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "npx prettier --config ../../.prettierrc.js -w . ",
        "test": "node ./out/test/runTest.js",
        "vsix": "npm run build-go && npx vsce package",
        "vsix-ci": "npx vsce package",
        "lint-check": "npx prettier --config ../../.prettierrc.js -c . "
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.67.0",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.16.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "prettier": "^2.7.1",
        "ts-loader": "^9.3.0",
        "typescript": "^4.7.2",
        "vsce": "^2.9.2",
        "webpack": "^5.72.1",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "get-port": "^6.1.2",
        "vscode-json-languageservice": "3.4.9",
        "vscode-languageclient": "^8.0.2",
        "vscode-languageserver-textdocument": "^1.0.0",
        "yaml-language-server": "0.10.0"
    }
}
