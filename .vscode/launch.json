// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "presentation": {
        "hidden": false,
        "group": "Run",
        "order": 1
      },
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/editors/vscode",
        "--disable-extensions"
      ],
      "outFiles": ["${workspaceFolder}/editors/vscode/dist/**/*.js"],
      "preLaunchTask": "task: task build",
      "env": {
        "CCI_DEV": "true",
        "TOKEN": "",
        "SELF_HOSTED_URL": ""
      }
    },
    {
      "name": "Run Extension (user extensions enabled)",
      "presentation": {
        "hidden": false,
        "group": "Run",
        "order": 2
      },
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/editors/vscode"],
      "outFiles": ["${workspaceFolder}/editors/vscode/dist/**/*.js"],
      "preLaunchTask": "task: task build",
      "env": {
        "CCI_DEV": "true"
      }
    },
    {
      "name": "Start server",
      "presentation": {
        "hidden": false,
        "group": "Run",
        "order": 3
      },
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/start_server/start_server.go",
      "args": [
        "--port",
        "10001",
        "--schema",
        "${workspaceFolder}/schema.json"
      ]
    },
    {
      "name": "E2E tests",
      "presentation": {
        "hidden": false,
        "group": "Tests",
        "order": 4
      },
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "E2E tests (standalone)",
      "presentation": {
        "hidden": false,
        "group": "Tests",
        "order": 4
      },
      "env": {
        "SPAWN_LSP_SERVER": "false"
      },
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Attach to Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "start_server"
    }
  ]
}
