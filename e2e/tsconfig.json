{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",

    "strict": true,
    "allowJs": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ],
  },
  "include": [
    "src/",
    "src/.env/**/*.ts",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
